<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="movie"
            type="com.example.piotrwelpa.popularmovies.data.model.Movie" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.example.piotrwelpa.popularmovies.ui.activities.MovieDetailActivity">

            <TextView
                android:id="@+id/original_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/title_padding_left"
                android:paddingEnd="@dimen/title_padding_left"
                android:text="@{movie.originalTitle}"
                android:textColor="@color/colorText"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/app_name"/>

            <ImageView
                android:id="@+id/mini_poster_iv"
                android:layout_width="@dimen/thumbnail_width"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginTop="@dimen/default_margin"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/original_title_tv"
                app:posterPath="@{movie.posterPath}"
                tools:src="@mipmap/default_image"
                android:contentDescription="@string/poster_thumbnail" />

            <TextView
                android:id="@+id/year_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/text_default_margin"
                android:layout_marginStart="@dimen/text_default_margin"
                android:layout_marginTop="@dimen/year_margin_top"
                android:text="@{movie.releaseDate}"
                android:textSize="@dimen/detail_text_size"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/mini_poster_iv"
                app:layout_constraintTop_toBottomOf="@+id/original_title_tv"
                tools:text="2018"/>

            <TextView
                android:id="@+id/user_rating_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/text_default_margin"
                android:layout_marginStart="@dimen/rating_margin_start"
                android:layout_marginTop="@dimen/text_default_margin"
                android:text="@{movie.voteAverage}"
                android:textSize="@dimen/detail_text_size"
                app:layout_constraintStart_toEndOf="@id/mini_poster_iv"
                app:layout_constraintTop_toBottomOf="@+id/year_tv"
                tools:text="9.3/10"/>

            <TextView
                android:id="@+id/overview_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/text_default_margin"
                android:layout_marginStart="@dimen/text_default_margin"
                android:layout_marginTop="@dimen/text_default_margin"
                android:text="@{movie.overview}"
                android:textSize="@dimen/description_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mini_poster_iv"
                tools:text="Sample text description. Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum."/>

        </android.support.constraint.ConstraintLayout>


    </ScrollView>
</layout>